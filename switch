       // --- Page-wide Background Icons ---
       function createPageBackgroundIcons() {
         const iconContainer = document.getElementById('background-icons');
         if (!iconContainer) return;
        const icons = [
            'https://placehold.co/100x100?text=Icon1',
            'https://placehold.co/100x100?text=Icon2',
            'https://placehold.co/100x100?text=Icon3',
            'https://placehold.co/100x100?text=Icon4'
        ];
         const iconCount = 15;
         for (let i = 0; i < iconCount; i++) {
             const iconWrapper = document.createElement('div');
             iconWrapper.className = 'bg-icon';
             const iconImg = document.createElement('img');
             iconImg.src = icons[i % icons.length];
             const size = Math.random() * 80 + 40;
             iconWrapper.style.width = `${size}px`;
