       function createPageBackgroundIcons() {
         const iconContainer = document.getElementById('background-icons');
         if (!iconContainer) return;
        const icons = [
            'https://placehold.co/100x100?text=Icon1',
            'https://placehold.co/100x100?text=Icon2',
            'https://placehold.co/100x100?text=Icon3',
            'https://placehold.co/100x100?text=Icon4'
        ];
         const iconCount = 15;
